<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Breeze" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/light_primary</item>
         <item name="colorPrimaryVariant">@color/light_primary</item>
         <item name="colorSecondary">@color/light_secondary</item>
         <item name="android:statusBarColor">@color/light_primary</item>
         <item name="colorAccent">@color/light_gray</item>
        <item name="colorOnBackground">@color/white_background</item>
    </style>

    <style name="Theme.Breeze" parent="Base.Theme.Breeze">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/custom_circular_progressbar</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>