<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.event.DetailEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_event"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                >
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/ic_points"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_point"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:text="200 Points"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Joined"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/shape_joined"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Finished"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/shape_joined"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:text="Emit Less, Live More: Bersama kurangi CO2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:id="@+id/ic_location"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location_black"
                    />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/black"
                    android:text="Kab. Bogor, Jawa Barat"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:id="@+id/ic_calender_black"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calender_black"
                    />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/black"
                    android:text="20 November 2023"/>

            </LinearLayout>

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:text="About Event"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/black"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce convallis aliquet turpis, eu accumsan enim venenatis sit amet. Donec et mollis. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce convallis aliquet turpis, eu accumsan enim venenatis sit amet. Donec et mollis. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce convallis aliquet turpis, Fusce convallis aliquet turpis, eu accumsan enim venenatis sit amet. Donec et mollis"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join_event"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Join Event"
            android:layout_marginTop="15dp"
            android:padding="6dp"
            app:cornerRadius="6dp"
            android:textSize="16sp"
            app:iconTint="@color/white"
            android:layout_marginBottom="20dp"
            app:iconGravity="textEnd"
            android:fontFamily="@font/inter_medium"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload_evidence"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Upload Evidence"
            android:layout_marginTop="15dp"
            android:padding="6dp"
            app:cornerRadius="6dp"
            android:textSize="16sp"
            app:iconTint="@color/white"
            android:layout_marginBottom="20dp"
            app:iconGravity="textEnd"
            android:fontFamily="@font/inter_medium"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_finished"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Finished"
            android:layout_marginTop="15dp"
            android:padding="6dp"
            app:cornerRadius="6dp"
            android:textSize="16sp"
            app:iconTint="@color/white"
            android:layout_marginBottom="20dp"
            app:iconGravity="textEnd"
            android:fontFamily="@font/inter_medium"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="?attr/colorPrimary" />
    </LinearLayout>

</ScrollView>