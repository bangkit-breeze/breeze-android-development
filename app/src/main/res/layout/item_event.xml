<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_article"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_event"
        android:layout_width="90dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:textSize="14sp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Emit Less, Live More: Bersasdasdama kurangi CO2"
        app:layout_constraintStart_toEndOf="@+id/iv_event"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_location"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/ic_location_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_location"
        app:layout_constraintEnd_toStartOf="@id/tv_location"
        app:layout_constraintStart_toEndOf="@+id/iv_event"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:maxLines="2"
        android:textSize="11sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        android:text="Kab. Bogor"
        app:layout_constraintStart_toEndOf="@+id/ic_location"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <ImageView
        android:id="@+id/ic_points"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/ic_point"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_points"
        app:layout_constraintEnd_toStartOf="@id/tv_points"
        app:layout_constraintStart_toEndOf="@+id/iv_event"
        app:layout_constraintTop_toBottomOf="@id/ic_location" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:maxLines="2"
        android:textSize="11sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        android:text="200 Points"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_points"
        app:layout_constraintStart_toEndOf="@+id/ic_points"
        app:layout_constraintTop_toBottomOf="@id/tv_location" />

    <ImageView
        android:id="@+id/ic_date"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/ic_date_leave"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/iv_event"
        app:layout_constraintTop_toBottomOf="@id/ic_points" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:maxLines="2"
        android:textSize="11sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        android:text="110 Days left"
        app:layout_constraintBottom_toBottomOf="@id/ic_date"
        app:layout_constraintStart_toEndOf="@+id/ic_date"
        app:layout_constraintTop_toBottomOf="@id/tv_points" />


</androidx.constraintlayout.widget.ConstraintLayout>

