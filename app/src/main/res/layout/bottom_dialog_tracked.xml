<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbg">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_food"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/add_food_carbon"
        app:backgroundTint="@color/white"
        app:cornerRadius="15dp"
        app:strokeColor="@color/selector_stroke"
        app:strokeWidth="1dp"
        android:textColor="@color/black"
        app:icon="@drawable/ic_baseline_no_food_24"
        app:iconTint="?attr/colorPrimary"
        app:iconGravity="start"
        app:iconPadding="8dp"
        android:textAlignment="textStart"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_vechile"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/add_vechile_carbon"
        app:backgroundTint="@color/white"
        app:cornerRadius="15dp"
        app:strokeColor="@color/selector_stroke"
        app:strokeWidth="1dp"
        android:textColor="@color/black"
        app:icon="@drawable/ic_baseline_drive_eta_24"
        app:iconTint="?attr/colorPrimary"
        app:iconGravity="start"
        app:iconPadding="8dp"
        android:textAlignment="textStart"
        />

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="4dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_close_24"
        android:background="@drawable/rounded_button" />

</LinearLayout>