<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.details.carbon.DetailCarbonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
                app:title="@string/detail_carbon"
                app:titleTextAppearance="@style/ToolbarTitleText" />
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="20dp"
               android:background="@drawable/bg_highlights"
               >

               <com.anychart.AnyChartView
                   android:id="@+id/pieChart"
                   android:layout_width="match_parent"
                   android:layout_height="300dp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/pieChart">
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                        <com.google.android.material.textview.MaterialTextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Emisi"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"
                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Count"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"

                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CO2"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"

                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"

                            />
                    </LinearLayout>

                   <LinearLayout

                       android:padding="5dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:orientation="horizontal">
                       <ImageView
                           android:layout_width="12dp"
                           android:layout_height="12dp"
                           android:src="@drawable/ic_emisi_food"
                           />

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_emisi_food"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Food"
                           android:textSize="13sp"
                           android:fontFamily="@font/inter"
                           />
                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_count_food"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="12"
                           android:textSize="13sp"
                           android:fontFamily="@font/inter"
                           />
                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_carbon_food"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="0,2"
                           android:textSize="13sp"
                           android:fontFamily="@font/inter"
                           />
                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_persen_food"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="37,5"
                           android:textSize="13sp"
                           android:fontFamily="@font/inter"
                           />
                   </LinearLayout>
                   <LinearLayout

                       android:padding="5dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:orientation="horizontal">
                       <ImageView
                           android:layout_width="12dp"
                           android:layout_height="12dp"
                           android:src="@drawable/ic_emisi_vehicle"
                           />

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_emisi_vehicle"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:textSize="13sp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Vehicle"
                           android:fontFamily="@font/inter"
                           />
                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_count_vehicle"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:textSize="13sp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="12"
                          android:fontFamily="@font/inter"
                           />
                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_carbon_vehicle"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="0,2"
                           android:textSize="13sp"
                           android:fontFamily="@font/inter"
                           />
                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_persen_vehicle"
                           android:gravity="center"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="37,5"
                           android:textSize="13sp"
                           android:fontFamily="@font/inter"
                           />
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>